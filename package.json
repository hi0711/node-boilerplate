{
  "name": "",
  "version": "2.0.0",
  "description": "Use boilerplate",
  "main": "index.js",
  "config": {
    "scss_dir": "assets/scss",
    "css_dir": "public/assets/css",
    "jade_dir": "assets/tmpl",
    "html_dir": "public",
    "img_src_dir": "assets/img",
    "img_dir": "public/assets/img",
    "js_src_dir": "assets/js",
    "js_dir": "public/assets/js"
  },
  "scripts": {
    "start-serve": "live-server ./public/",
    "sync": "browser-sync start --server ./public",
    "css:comb": "csscomb $npm_package_config_scss_dir/**/*.scss",
    "css:scss": "node-sass --output-style compact $npm_package_config_scss_dir/common.scss > $npm_package_config_css_dir/common.css",
    "css:prefix": "postcss -u autoprefixer --autoprefixer.browsers '> 5%' -r $npm_package_config_css_dir/*",
    "imagemin": "imagemin $npm_package_config_img_src_dir/* -o $npm_package_config_img_dir",
    "build:js": "browserify $npm_package_config_js_src_dir/*.js | uglifyjs -mc > $npm_package_config_js_dir/common.bundle.js",
    "build:css": "npm run css:comb; npm run css:scss; npm run css:prefix",
    "build:jade": "jade -o ./public $npm_package_config_jade_dir --pretty; find public -name '_*.html' | xargs rm -rf",
    "build": "npm run build:jade; npm run build:js; npm run build:css",
    "watch:js": "watch 'npm run build:js' $npm_package_config_js_src_dir",
    "watch:css": "watch 'npm run css:scss' $npm_package_config_scss_dir",
    "watch:jade": "watch 'npm run build:jade' $npm_package_config_jade_dir",
    "watch": "npm run 'watch:css' & npm run 'watch:jade' & npm run 'watch:js'",
    "start": "npm run start-serve & npm run watch"
  },
  "author": "hi0711",
  "license": "Good Boy",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.11.2",
    "browserify": "^13.0.0",
    "imagemin-cli": "^3.0.0",
    "jade": "^1.11.0",
    "live-server": "^1.1.0",
    "node-sass": "^3.4.2",
    "postcss-cli": "^2.5.1",
    "uglifyjs": "^2.4.10",
    "watch": "^0.19.2"
  }
}
